{
  "name": "chrislyons-website",
  "version": "1.0.0",
  "type": "module",
  "description": "Personal website for Chris Lyons featuring portfolio projects, blog, and song lyrics",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev --port 8787 --local",
    "dev:all": "npm run dev & npm run dev:worker",
    "build": "vite build && node scripts/generate-asset-manifest.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^20.0.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.1.12",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "hono": "^4.10.4"
  }
}
